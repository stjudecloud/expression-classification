{
  "name": "t-SNE",
  "title": "Interactive t-SNE",
  "summary": "Produce a t-SNE plot that highlights input sample(s) against a cohort of existing samples.",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "reference_counts",
      "label": "Reference counts to compare against",
      "class": "array:file",
      "optional": true,
      "help": "Provide a cohort of samples to compare against",
      "patterns": [ "*.txt" ]
    },
    {
      "name": "input_sample",
      "label": "Input sample(s)",
      "class": "array:file",
      "optional": true,
      "help": "Provide an optional set of input samples to compare to the existing cohort",
      "patterns": [ "*.txt" ]
    },
    {
      "name": "output_name",
      "label": "Output file name", 
      "class": "string",
      "default": "samples.html"
    }
  ],
  "outputSpec": [
    {
      "name": "tsne_plot",
      "label": "HTML plot of t-SNE graph",
      "class": "file",
      "patterns": [
        "*.html"
      ],
      "help": ""
    },
    {
      "name": "tsne_matrix",
      "label": "Matrix of values for t-SNE graph",
      "class": "file",
      "patterns": [
        "*.txt"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "version": "1",
    "distribution": "Ubuntu",
    "file": "src/t-SNE.sh",
    "execDepends": [
       { "name": "parallel"}
    ]
  },
  "regionalOptions": {
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem2_ssd1_x4"
        }
      }
    }
  },
  "access": {
    "network": [
      "*" 
    ],
    "allProjects": "VIEW"
  } 
}
